<?xml version="1.0" encoding="UTF-8"?>

<!--
    Archivo FXML que define la estructura de la vista de inicio de sesión de la aplicación.
    Este archivo define campos de entrada para el correo electrónico y la contraseña,
    botones para iniciar sesión y crear un nuevo usuario, y un mensaje de bienvenida.
-->

<AnchorPane prefHeight="494.0" prefWidth="817.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.LoginController">
   <children>
      <!-- Panel principal -->
      <AnchorPane prefHeight="500.0" prefWidth="825.0" style="-fx-background-color: #E0E1DD;">
         <children>
            <!-- Barra de navegación inferior -->
            <Pane layoutY="478.0" prefHeight="34.0" prefWidth="826.0" style="-fx-background-color: #1B263B;">
               <children>
                  <!-- Logos en los extremos -->
                  <ImageView fx:id="imageDecoracionInferior2" fitHeight="34.0" fitWidth="41.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/logo.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="imageDecoracionInferior21" fitHeight="34.0" fitWidth="49.0" layoutX="788.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/logo.png" />
                     </image>
                  </ImageView>
                  <!-- Créditos -->
                  <Label layoutX="324.0" layoutY="8.0" text="Pagina creada por Carlos y Álvaro" textFill="WHITE" />
               </children>
            </Pane>
            <!-- Mensaje de bienvenida -->
            <Label layoutX="144.0" layoutY="155.0" text="¡Bienvenido a Cine Picasso!">
               <font>
                  <Font name="Georgia" size="20.0" />
               </font>
            </Label>
            <!-- Campo de entrada para el correo electrónico -->
            <Label layoutX="391.0" layoutY="213.0" text="Correo">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtCorreo" layoutX="300.0" layoutY="229.0" prefHeight="26.0" prefWidth="217.0" />
            <!-- Campo de entrada para la contraseña -->
            <Label layoutX="378.0" layoutY="270.0" text="Contraseña">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtContrasena" layoutX="299.0" layoutY="286.0" prefHeight="26.0" prefWidth="217.0" />
            <!-- Botón para iniciar sesión -->
            <Button fx:id="btnCrearUsuario1" layoutX="299.0" layoutY="352.0" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="26.0" prefWidth="218.0" text="Iniciar sesión">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <!-- Botón para crear un nuevo usuario -->
            <Button fx:id="btnCrearUsuario" layoutX="300.0" layoutY="391.0" mnemonicParsing="false" onAction="#crearUnNuevoUsuario" prefHeight="26.0" prefWidth="218.0" text="Crear nuevo usuario">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <!-- Barra de navegación superior -->
      <Pane fx:id="panleSuperior" prefHeight="64.0" prefWidth="826.0" style="-fx-background-color: #1B263B;" styleClass="panelSuperior">
         <children>
            <!-- Logo -->
            <ImageView fx:id="imageLogo" fitHeight="64.0" fitWidth="83.0" layoutX="16.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</AnchorPane>

