<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Esta es una plantilla de interfaz de usuario para la creación de una ficha de película en una aplicación.
    Proporciona campos para ingresar información como título, duración, puntuación, descripción, actores, director, productora, etc.
-->

<AnchorPane fx:id="txtTituloPelicula" prefHeight="614.4" prefWidth="864.0" style="-fx-background-color: #778DA9;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Barra de navegación superior -->
      <Pane prefHeight="94.8" prefWidth="864.0" style="-fx-background-color: #1B263B;">
         <children>
            <!-- Logo de la aplicación -->
            <ImageView fitHeight="89.0" fitWidth="369.0" layoutX="6.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            <!-- Botones de navegación -->
            <Label fx:id="btnInicio" layoutX="451.0" layoutY="32.0" text="Inicio" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="24.0" />
               </font>
            </Label>
            <Label fx:id="btnBuscador" layoutX="645.0" layoutY="32.0" text="Buscador" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="24.0" />
               </font>
            </Label>
            <Label fx:id="btnAgregar" layoutX="540.0" layoutY="33.0" text="Agregar" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="24.0" />
               </font>
            </Label>
            <Label fx:id="btnUsuario" layoutX="765.0" layoutY="32.0" text="Usuario" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <!-- Barra de pie de página -->
      <Pane layoutY="586.0" prefHeight="33.0" prefWidth="864.0" style="-fx-background-color: #1B263B;">
         <children>
            <!-- Logos de la aplicación -->
            <ImageView fitHeight="26.0" fitWidth="27.0" layoutX="7.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="26.0" fitWidth="27.0" layoutX="829.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            <!-- Información de la aplicación -->
            <Label layoutX="316.0" layoutY="5.0" prefHeight="17.0" prefWidth="232.0" text="Aplicación creada por Carlos y Álvaro" textFill="WHITE">
               <font>
                  <Font name="Georgia" size="14.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <!-- Detalles de la película -->
      <ImageView fx:id="imagePelicula" fitHeight="260.0" fitWidth="190.0" layoutX="29.0" layoutY="106.0" pickOnBounds="true">
         <image>
            <Image url="@../images/paceHolder.jpg" />
         </image>
      </ImageView>
      <Label layoutX="29.0" layoutY="439.0">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label fx:id="txtTituloPelicula" layoutX="289.0" layoutY="131.0" prefHeight="26.0" prefWidth="84.0" text="Titulo:">
         <font>
            <Font name="Georgia Bold" size="22.0" />
         </font>
      </Label>
      <Label layoutX="295.0" layoutY="161.0" prefHeight="19.0" prefWidth="71.0" text="Duración:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label layoutX="295.0" layoutY="196.0" prefHeight="17.0" prefWidth="99.0" text="Puntuación:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label layoutX="254.0" layoutY="225.0" text="Fecha de estreno:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <!-- Área de descripción -->
      <Pane layoutX="309.0" layoutY="249.0" prefHeight="151.0" prefWidth="534.0" style="-fx-background-color: #566E8A;">
         <children>
            <Label layoutX="14.0" layoutY="5.0" text="Descripción:">
               <font>
                  <Font name="Georgia" size="16.0" />
               </font>
            </Label>
            <TextArea fx:id="txtDescriptcion" layoutX="16.0" layoutY="24.0" prefHeight="115.0" prefWidth="502.0" style="-fx-background-color: #566E8A;" />
         </children>
      </Pane>
      <!-- Detalles adicionales -->
      <Label layoutX="309.0" layoutY="439.0" text="Actores:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label layoutX="288.0" layoutY="504.0" text="Productora:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label layoutX="307.0" layoutY="472.0" text="Director:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <Label layoutX="311.0" layoutY="404.0" text="Género:">
         <font>
            <Font name="Georgia" size="16.0" />
         </font>
      </Label>
      <!-- Campos de entrada de datos -->
      <TextField fx:id="txtGenero" layoutX="410.0" layoutY="400.0" prefHeight="26.0" prefWidth="438.0" text="Acción, Terror, Romance..." />
      <TextField fx:id="txtActores" layoutX="411.0" layoutY="436.0" prefHeight="17.0" prefWidth="437.0" />
      <TextField fx:id="txtDirector" layoutX="411.0" layoutY="469.0" prefHeight="19.0" prefWidth="438.0" />
      <TextField fx:id="txtProductora" layoutX="411.0" layoutY="501.0" prefHeight="17.0" prefWidth="438.0" />
      <TextField fx:id="txtDuracion" layoutX="399.0" layoutY="161.0" prefHeight="24.0" prefWidth="360.0" text=" *** minutos" />
      <TextField fx:id="txtPuntuacion" layoutX="399.0" layoutY="193.0" prefHeight="17.0" prefWidth="360.0" text=" X/10" />
      <TextField fx:id="txtFechaDeEstreno" layoutX="400.0" layoutY="221.0" prefHeight="26.0" prefWidth="360.0" text=" dd/mm/aaaa" />
      <TextField fx:id="txtTitulo" layoutX="400.0" layoutY="131.0" prefHeight="26.0" prefWidth="360.0" />
      <!-- Botón para dar de alta -->
      <Button fx:id="btnDarDeAlta" layoutX="316.0" layoutY="540.0" minHeight="37.0" minWidth="169.0" mnemonicParsing="false" text="Dar de alta" />
      <!-- Mensaje de instrucción -->
      <Label layoutX="368.0" layoutY="93.0" prefHeight="26.0" prefWidth="298.0" text="Rellena los datos de la ficha">
         <font>
            <Font name="Georgia Bold" size="18.0" />
         </font>
      </Label>
      <!-- Iconos de detalles adicionales -->
      <ImageView fitHeight="24.0" fitWidth="27.0" layoutX="776.0" layoutY="194.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/estrella%20icono.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="19.0" fitWidth="24.0" layoutX="779.0" layoutY="162.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/icono%20relog.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="24.0" fitWidth="24.0" layoutX="776.0" layoutY="224.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/longitud.png" />
         </image>
      </ImageView>
   </children>
