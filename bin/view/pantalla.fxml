<?xml version="1.0" encoding="UTF-8"?>

<!--
    Archivo FXML que define la estructura de la vista para crear una nueva cuenta de usuario en la aplicación.
    Este archivo contiene campos de entrada para el nombre completo, fecha de nacimiento, género, correo electrónico,
    contraseña y confirmación de contraseña, así como un botón para crear el usuario y otro para volver al inicio de sesión.
-->

<AnchorPane prefHeight="494.0" prefWidth="817.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.pantallaController">
   <children>
      <!-- Panel principal -->
      <AnchorPane prefHeight="500.0" prefWidth="825.0" style="-fx-background-color: #E0E1DD;">
         <children>
            <!-- Etiqueta de bienvenida -->
            <Label fx:id="lblBienvenido" layoutX="348.0" layoutY="109.0" prefHeight="34.0" prefWidth="123.0" text="Crear cuenta">
               <font>
                  <Font name="Georgia" size="18.0" />
               </font>
            </Label>
            <!-- Campos de entrada -->
            <Label layoutX="34.0" layoutY="143.0" text="Nombre completo">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtNombre" layoutX="34.0" layoutY="158.0" prefHeight="26.0" prefWidth="217.0" />
            <Label layoutX="34.0" layoutY="187.0" text="Fecha de nacimiento">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtFechaDeNacimiento" layoutX="34.0" layoutY="204.0" prefHeight="26.0" prefWidth="217.0" text="yyyy-mm-dd" />
            <Label layoutX="34.0" layoutY="236.0" text="Género">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtGenero" layoutX="34.0" layoutY="252.0" prefHeight="26.0" prefWidth="217.0" />
            <Label layoutX="34.0" layoutY="287.0" text="Correo electrónico">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtCorreo" layoutX="34.0" layoutY="302.0" prefHeight="26.0" prefWidth="217.0" />
            <Label layoutX="34.0" layoutY="328.0" text="Contraseña">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtContrasena" layoutX="34.0" layoutY="343.0" prefHeight="26.0" prefWidth="217.0" />
            <Label layoutX="34.0" layoutY="369.0" text="Confirmar contraseña">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtConfirmarContrasena" layoutX="34.0" layoutY="384.0" prefHeight="26.0" prefWidth="217.0" />
            <ComboBox fx:id="cboxGusto" layoutX="590.0" layoutY="159.0" prefWidth="150.0" />
            <!-- Botones -->
            <Button fx:id="btnCrearUsuario" layoutX="300.0" layoutY="343.0" mnemonicParsing="false" onAction="#anadirUsuarioALaLista" prefHeight="26.0" prefWidth="218.0" text="Crear usuario" />
            <Button fx:id="btnVolverALogin" layoutX="300.0" layoutY="384.0" mnemonicParsing="false" onAction="#volverALogin" prefHeight="26.0" prefWidth="218.0" text="Volver al inicio de sesión">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <!-- Barra de navegación superior -->
      <Pane fx:id="panleSuperior" prefHeight="64.0" prefWidth="826.0" style="-fx-background-color: #1B263B;" styleClass="panelSuperior">
         <children>
            <!-- Logo -->
            <ImageView fx:id="imageLogo" fitHeight="64.0" fitWidth="83.0" layoutX="16.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</AnchorPane>
